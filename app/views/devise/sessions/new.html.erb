<div class="container">
    <div class="card card-container">
        <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
        <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
        <p id="profile-name" class="profile-name-card"></p>
        <%= simple_form_for(resource, as: resource_name, html: { class: "form-signin"}, url: session_path(resource_name)) do |f| %>
           <span id="reauth-email" class="reauth-email"></span>
           <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, input_html: {class: "form-control"} %>
            <%= f.input :password, label: "Senha", required: false, input_html: {class: "form-control"} %>
            <div id="remember" class="checkbox">
              <%= f.input :remember_me, label: "Mantenha-me conectado", as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Entrar", class: "btn-login btn-lg btn-primary btn-block btn-signin" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
    </div><!-- /card-container -->
</div><!-- /container -->
